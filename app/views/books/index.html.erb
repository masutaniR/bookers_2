<div class="container mt-3">
  <h3>Books</h3>
  <div class="row">
<table>
  <thead>
    <tr>
      <th class="col-3">Title</th>
      <th class="col-6">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "Show", book_path(book) %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(book), method: :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>

    <%= form_with model:@book, local:true do |f| %>
    <h4>New book</h4>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Body</p>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
</div>