<div class="container mt-3">
  <%= form_with model:@book, local:true do |f| %>
  <h4>Editing Book</h4>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <% end %>

<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
</div>
